
<%- include('parts/top.ejs') %>

<!-- Page Content -->
<div class="page-heading products-heading header-text">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <h4>New Arrivals</h4>
          <h2>Latest IT Books</h2>
        </div>
      </div>
    </div>
  </div>
</div>


  
  <div class="latest-products">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="section-heading">
            <h2>Latest Products</h2>
            <a href="products.html">view all products <i class="fa fa-angle-right"></i></a>
          </div>
        </div>
        <% for(let book of Allbooks){ %>
        <div class="col-md-4">
          <div class="product-item">
            <a href="#"><img style="height: 350px;" src="uploads/<%= book.image %>" alt=""></a>
            <div class="down-content">
              <a href="#"><h4><%= book.title %></h4></a>
              <h6>$<%= book.price %></h6>
              <p><%= book.description %></p>
              <ul class="stars">
                <% for(let i = 0; i < Math.floor(book.rating); i++) { %>
                  <li><i class="fa fa-star"></i></li>
                <% } %>
                <% if (book.rating % 1 !== 0) { %>
                  <li><i class="fa fa-star-half-o"></i></li>
                <% } %>
                <% for(let i = Math.ceil(book.rating); i < 5; i++) { %>
                  <li><i class="fa fa-star-o"></i></li>
                <% } %>
              </ul>
              <span>Reviews (<%= book.reviews %>)</span>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('parts/bottom.ejs') %>
